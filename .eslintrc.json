{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard",
        "prettier",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "camelcase": "off",
        "node/no-path-concat": "off",
        "no-useless-constructor": "off"
    }
}
